<%- include ("partials/header.ejs", {title: "My Posted Jobs"}) %>
    
    
    <div id="table">
        <table style="width:80%">
            <tr>
                <th>Title</th>
                <th>Descriptions</th>
                <th>Budget</th>
                <th>Tag</th>
                
                <th>Actions</th>
            </tr>
            <% for(let i=0; i< data.length; i++) { %>
            <tr>
                <td><%= data[i].dataValues.title %></td>
                <td><%= data[i].dataValues.description %></td>
                <td><%= data[i].dolar() %></td>
                <td><% for(let j = 0; j < data[i].dataValues.Tags.length; j++) { %>
                    <%= data[i].dataValues.Tags[j].dataValues.name %> | 
                <% } %>  </td>
            
                <td><a href = "/jobs/delete/<%= data[i].dataValues.id %>/"><button>Delete</button></a> <a href = "/jobs/edit/<%= data[i].dataValues.id %>/"><button>Edit</button></a></td>
            </tr>

            <% } %>
        </table>
    </div>
    <%- include ("partials/footer.ejs") %>